<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer"
    android:background="@color/c1"
    tools:context=".ATTRACTIONS">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#460452"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/c1">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/attextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ATTRACTIONS"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="100dp"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/gardens"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attextview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="GARDENS"
        android:gravity="center"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/museums"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gardens"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="MUSEUMS"
        android:gravity="center"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/histoplaces"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/museums"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="HISTORICAL PLACES"
        android:gravity="center"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/zoo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/histoplaces"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="ZOO"
        android:gravity="center"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/artgallery"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zoo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="ART GALLERY"
        android:gravity="center"
        android:padding="15dp"
        />


</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/attraction_menu"
        app:headerLayout="@layout/header_attraction"
        android:layout_gravity="start"
        android:background="@color/c1"
        app:itemTextColor="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="LOGOUT"
                android:textSize="20dp"
                android:textColor="#fff"
                android:onClick="logout"
                />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>