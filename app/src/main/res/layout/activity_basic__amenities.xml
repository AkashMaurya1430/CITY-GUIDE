<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer"
    android:background="@color/c1"
    tools:context=".BASIC_AMENITIES">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#460452"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/c1">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/batextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BASIC AMENITIES"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="100dp"
        android:padding="15dp"

        />
    <Button
        android:id="@+id/pp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/batextview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="PETROL PUMPS"
        android:gravity="center"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/schools"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="SCHOOLS"
        android:gravity="center"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/colleges"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schools"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="COLLEGES"
        android:gravity="center"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/markets"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colleges"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="MARKETS"
        android:gravity="center"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/orphanage"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/markets"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="ORPHANAGE"
        android:gravity="center"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/oah"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orphanage"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="OLD AGE HOMES"
        android:gravity="center"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/accomadation"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oah"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="ACCOMMODATION"
        android:gravity="center"
        android:padding="15dp"
        />

</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/ba_menu"
        app:headerLayout="@layout/header_ba"
        android:layout_gravity="start"
        android:background="@color/c1"
        app:itemTextColor="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="LOGOUT"
                android:textSize="20dp"
                android:textColor="#fff"
                android:onClick="logout"/>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>